                    <div class="form-group category">
                        <label>Personality Development<input type="checkbox" name="personalitydevelopment" value="true"
                                id="personalitydevelopment" style="margin: 4px;"></label>
                    </div>
                    <div class="form-group category">
                        <label>Power Dressing<input type="checkbox" name="powerdressing" value="true"
                                id="powerdressing" style="margin: 4px;"></label>
                    </div>
                    <div class="form-group category">
                        <label>Curated Clothes<input type="checkbox" name="curatedclothes" value="true"
                                id="curatedclothes" style="margin: 4px;"></label>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create Post" id="sendMessageButton"
                            class="btn btn-primary py-3 px-5">
                    </div>

                </form>
